<install type="module" version="1.5.0">
	<name>Menu Dependent Items</name>
	<author>viazenetti GmbH</author>
	<creationDate>August 2008</creationDate>
	<copyright>(C) 2008 viazenetti GmbH. All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<authorEmail>cl@viazenetti.de</authorEmail>
	<authorUrl>www.viazenetti.de</authorUrl>
	<version>1.1.0</version>
	<description>Menu Dependent Items Installation</description>
	<files>
		<filename module="mod_menu_dep_items">mod_menu_dep_items.php</filename>
		<filename>mod_menu_dep_items_class.php</filename>
		<filename>index.html</filename>
		<filename>viazenetti.gif</filename>
		<filename>tmpl/img.php</filename>
		<filename>tmpl/css.php</filename>
		<filename>tmpl/index.html</filename>
	</files>
	<languages>
		<language tag="en-GB">language/en-GB.mod_menu_dep_items.ini</language>
		<language tag="de-DE">language/de-DE.mod_menu_dep_items.ini</language>
	</languages>
	<params>
		<param name="moduleclass_sfx" type="text" default="" label="MODULE CLASS SUFFIX" description="PARAMMODULECLASSSUFFIX" />
		<param name="type" type="list" default="img" label="TYPE_L" description="TYPE_D">
			<option value="img">TYPE_IMG</option>
			<option value="css">TYPE_CSS</option>
		</param>
		<param name="add_menu_type" type="radio" default="1" label="MENUNTYPE_L" description="MENUNTYPE_D">
			<option value="1">YES</option>
			<option value="0">NO</option>
		</param>
		<param type="spacer" />
		<param name="use_names" type="radio" default="0" label="USENAMES_L" description="USENAMES_D">
			<option value="0">USENAMES_ID</option>
			<option value="1">USENAMES_ALIAS</option>
		</param>
		<param name="folder" type="text" default="images/stories" label="FOLDER_L" description="FOLDER_D" />
		<param name="file_prefix" type="text" default="" label="PREFIX_L" description="PREFIX_D" />
		<param name="default_file" type="text" default="" label="DEFAULT_L" description="DEFAULT_D" />
		<param type="spacer" />
		<param name="img_extension" type="text" default="jpg" label="IMGEX_L" description="IMGEX_D" />
		<param name="alttext" type="text" default="" label="IMGALT_L" description="IMGALT_D" />
		<param name="link" type="text" default="" label="IMGLINK_L" description="IMGLINK_D" />
		<param name="size" type="list" default="1" label="IMGSIZE_L" description="IMGSIZE_D">
			<option value="no">NOSIZE</option>
			<option value="org">ORGSIZE</option>
			<option value="abs">ABSSIZE</option>
			<option value="max">MAXSIZE</option>
		</param>
		<param name="width" type="text" default="" label="IMGWIDTH_L" description="IMGWIDTH_D" />
		<param name="height" type="text" default="" label="IMGHEIGHT_L" description="IMGHEIGHT_D" />
		<param type="spacer" />
		<param name="css_extension" type="text" default="css" label="CSSEX_L" description="CSSEX_D" />
		<param name="media" type="list" default="all" label="CSSMEDIA_L" description="CSSMEDIA_D">
			<option value="all">CM_ALL</option>
			<option value="screen">CM_SCREEN</option>
			<option value="print">CM_PRINTER</option>
			<option value="handheld">CM_HANDHELD</option>
		</param>
	</params>
	<params group="advanced">
		<param name="debug" type="radio" default="0" label="DEBUG_L" description="DEBUG_D">
			<option value="0">DEBUG_OFF</option>
			<option value="1">DEBUG_ON</option>
		</param>
		<param name="cache" type="list" default="0" label="Caching" description="Select whether to cache the content of this module">
			<option value="1">Use global</option>
			<option value="0">No caching</option>
		</param>
		<param name="cache_time" type="text" default="900" label="Cache Time" description="The time before the module is recached" />
	</params>
</install>
